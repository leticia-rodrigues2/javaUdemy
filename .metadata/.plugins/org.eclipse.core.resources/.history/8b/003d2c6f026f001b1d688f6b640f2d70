
public class Arrays {

	public static void main(String[] args) {
		
		double[] temperaturas= new double[365];
		temperaturas [0]= 31.3;
		temperaturas [1]= 32;
		temperaturas [2]= 33.3;
		temperaturas [3]= 34.3;
		temperaturas [4]= 33.1;
		
		System.out.println("No primeiro dia foi : " + temperaturas[0]);
	System.out.println("O tamanho do vetor " + temperaturas.length);
	
	
	for (int i=0; i<temperaturas.length; i++) {
		System.out.println(" A temperatura do dia "+ (i+1) + " Ã© " + temperaturas[i]);
	
	}
	
	// mostra todos os valores
	for(double temp: temperaturas) {
System.out.println(temp);
		
	}
	
	
	}

}
